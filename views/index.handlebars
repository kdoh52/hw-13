<h1>Eat-Da-Burger!</h1>

<img src="../public/assets/img/burger-white.jpg" alt="burger-image">

<h2>Add and track your burger cravings!</h2>

<div class="burger-container">
	<div class="newBurgers">
		<h3>New</h3>
		<ul>
		{{#each burgers}}
			{{#unless devoured}}
			{{> burgers/burger-block devoured=true}}
			{{/unless}}
		{{/each}}
		</ul>
	</div>

	<div class="devouredBurgers">
		<h3>Devoured</h3>
		<ul>
		{{#each burgers}}
			{{#if devoured}}
			{{> burgers/burger-block devoured=false}}
			{{/if}}
		{{/each}}
		</ul>
	</div>
</div>

<form class="create-form">
	<div class="form-group">
		<label for="burgerName">New Burger:</label>
		<input type="text" id="burgerName" name="burgerName">
	</div>
	<button class="form-button" type="submit">Add Burger</button>
</form>